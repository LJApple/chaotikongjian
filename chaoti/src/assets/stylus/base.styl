html,body
    height:100%
    background-color: #f0f0f0
    color: #999999
#app
    height 100%
    width: 100%
    background-color: #f0f0f0
    font-size 14px
.fs18
    font-size: 18px
.fs16
    font-size: 16px
.fs14
    font-size: 14px
.nowrap
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
.paddingLR12
    padding: 0 12px
.gray
    background-color: gray
.t-header
    background $headerBg
    height 150px
    width 100%
.displayNo
    display none !important
.bloder
    font-weight: bolder
.slide-enter-active, .slide-leave-active
  transition all 0.3s
.slide-enter, .slide-leave-to
  transform translate3d(100%, 0, 0)

.editPwd
    position fixed
    top 0
    left 0
    height 100%
    width 100%
    background rgba(0, 0, 0, 0.5)
    display flex
    align-items center
    justify-content center
    z-index 1
    .ep-box
        width: 318px
        box-sizing: border-box
        background-color: #ffffff
        text-align: center
        .ep-content
            padding: 0 12px
        .e-title
            font-size: 16px
            padding: 20px
        .e-input
            border: 1px solid #dddddd
            height 40px
            width: 90%
            padding: 0 12px
            margin-bottom: 20px
            border-radius: 10px
            box-sizing: border-box
        .epb-btn
            display: flex
            .epbb-sure, .epbb-cancle
                height 46px
                line-height: @height 
                width: 100%
                background-color: #ffffff
                border-top: 1px solid #dddddd
                color: #ed4b4b
            .epbb-cancle
                background: #ffffff
                border-right: 1px solid #dddddd
                color: #333333
.changeClass
    position: fixed
    right: 20px
    bottom: 20px
    width: 58px
    height: 58px
    z-index 99999
    .classRadio
        height: 50px
        width: @height
        border-radius: @height
        line-height: @height
        font-size: 12px
        color: #ffffff
        background: #ef4f4f
